<h1>Comments</h1>

<table class="table">
    <thead>
        <tr>
            <th>id</th>
            <th>Owner</th>
            <th>Date</th>
            <th>Body</th>

        </tr>
    </thead>
    <tbody>
        {{#each comments}}
        <tr>
            <td>{{id}}</td>
            <td>{{user.firstName}}</td>
            <td>{{generateTime date 'MMMM Do YYYY'}}</td>
            <th>{{body}}</th>
        </tr>
        {{/each}}

    </tbody>
</table>